<div class="container mx-auto">
    {% paginate search.results by 10 %}
        <h1 class="text-xl my-4 text-center">Search Results</h1>
        <div class="flex justify-center items-center">
            <form action="{{ routes.search_url }}" method="get">
                <input type="search" name="q" placeholder="Search..." value="{{ search.terms |  escape }}" class="border border-gray-300 rounded-l px-4 py-2 w-64 focus:outline-none focus:ring-2 focus:ring-gray-400">
                <button type="submit" class="bg-gray-600 text-white px-4 py-2 rounded-r hover:bg-gray-700">Search</button>
            </form>
        </div>

        {% if search.performed %}
            {% if search.results.size > 0 %}
                <div class="max-w-6xl mx-auto">
                    <p class="text-center text-gray-500 my-10">{{ search.results.size }} results found for the search term {{ search.terms |  escape}}</p>
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 my-8">
                    {% for item in search.results %}
                        {% case item.object_type %}
                            {% when 'product' %}
                                {%  render 'product-card', product:item %}
                            {% else %}
                                
                        {% endcase %}
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-center my-8 text-gray-600">No results found for "{{ search.terms | escape }}". Please try again with different keywords.</p>
            {% endif %}
        {% endif %}

        {% render 'pagination', paginate:paginate %}
    {% endpaginate %}
</div>