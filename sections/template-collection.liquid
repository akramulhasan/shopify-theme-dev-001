<div class="px-4 py-8">
    {% paginate collection.products by section.settings.products_per_page %}
        <h1 class="text-3xl text-center">{{ collection.title }}</h1>
        <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 my-8">
            {% for product in collection.products %}

                {% render 'product-card', product:product props:section.settings %}
        
        
                {% else %}
                    <p>No products found in this collection.</p>
            {% endfor %}
        </div>
    
        {%  render 'pagination', paginate:paginate %}
    {% endpaginate %}
</div>

{% schema %}
{
    "name": "Template Collection",
    "settings": [
        {
            "type": "number",
            "id": "products_per_page",
            "label": "Products per page",
            "default": 6
        },
        {
            "type": "checkbox",
            "id" : "show_vendor",
            "label": "Show vendor on product cards",
            "default": true
        }
        ]
}
{% endschema %}