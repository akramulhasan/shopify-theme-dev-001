<div class="flex flex-col items-center my-8">
    <h1 class="text-3xl font-medium py-4">{{ section.settings.heading }}</h1>
    {%  form 'contact' %}

        {% if form.errors %}
          {% render 'icon-failed' %}
          Oh No! There were some problems with your submission:
          <ul class="list-disc list-inside text-red-600">
            {% for field in form.errors %}
              <li>{{ field | capitalize }} {{ form.errors[field] }}</li>
            {% endfor %}
          </ul>
          {% elsif form.posted_successfully? %}

          <div class="flex flex-center mb-4">
                    <span class="text-green-400 mr-2">
                      {% render 'icon-success' %}
                    </span>
                    <div class="text-base text-gray-500">
                          Form submitted successfully!!
                    </div>
          </div>
          
          
        {% endif %}


        <div class="max-w-6xl mx-auto justify-center flex-1 items-center px-4">
            <div class="flex px-1 mb-3">

                <div class="px-3 md:w-1/2">
                    <label class="uppercase text-sm text-gray-500 font-medium" for="contact_name">Name</label> 
                    <input class="border py-3 px-4 mb-3 text-gray-700 w-full" type="text" name="contact[name]" id="contact_name" placeholder="Name"></div>
                <div class="px-3 md:w-1/2">
                    <label class="uppercase text-sm text-gray-500 font-medium" for="contact_email">Email</label>
                    <input class="border py-3 px-4 mb-3 text-gray-700 w-full" type="email" name="contact[email]" id="contact_email" placeholder="Email">
                </div>
            </div>
             <div class="flex px-1 mb-3">
                <div class="w-full px-3">
                    <label class="uppercase text-sm text-gray-500 font-medium" for="contact_message">Message</label>
                    <textarea class="border py-3 px-4 mb-3 text-gray-700 w-full" name="contact[body]" id="contact_message" placeholder="Your message here..."></textarea>
                </div>
             </div>
              <div class="flex px-1 mb-3">
                <div class="w-full px-3">  
                    <button class="w-full cursor-pointer px-4 py-3 border text-base font-medium bg-gray-900 text-white hover:bg-gray-700" type="submit">Send</button>
                </div>
              </div>
        </div>
    {% endform %}
</div>

{% schema %}
{
    "name": "Contact Form",
    "settings": [
            {
            "type": "text",
            "id": "heading",
            "label": "Heading"
            }
    ],
    "presets": [
        {
            "name": "Contact Form"
        }
    ]
}
{% endschema %}