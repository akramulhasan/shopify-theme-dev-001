<div class="py-8">
    {% paginate blog.articles by section.settings.articles_per_page %}
        <h1 class="text-center text-3xl">
            {{ blog.title }}
        </h1>

        <div class="div max-w-6xl mx-auto">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                {% for article in blog.articles%}
                    <div class="w-full py-6 px-3">
                        <div class="bg-white shadow-xl rounded-lg overflow-hidden">
                            {% if article.image != blank%}
                                <img class="w-full" src="{{ article.image |  img_url: 'medium' }}" alt="{{ article.image.alt | escape }}">
                
                                {% else %}
                                    {{ 'image' | placeholder_svg_tag: 'w-full h-60 object-cover bg-gray-100' }}
                            {% endif %}
                
                            <div class="p-4">
                                <h1>{{ article.title }}</h1>
                    
                                {% if article.excerpt.size > 1 %}
                                    <p>{{ article.excerpt |  strip_html |  truncatewords: 15 }}</p>
                                    {% else %}
                                        <p>{{ article.content |  strip_html |  truncatewords:15}}</p>   
                                {% endif %}
                                    <a href="{{ article.url }}" class="text-blue-800 py-2 my-2 inline-block">{{ section.settings.read_more_label }}</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

    {% endpaginate %}
</div>

{% schema %}
{
    "name": "Template Blog",
    "settings": [
        {
            "type":"text",
            "id":"read_more_label",
            "label":"Read More Label",
            "default":"Read More"
        },
        {
            "type" : "range",
            "id" : "articles_per_page",
            "label" : "Articles Per Page",
            "min" : 1,
            "max" : 10,
            "step" : 1,
            "default" : 3
        }
        ]
}
{% endschema %}