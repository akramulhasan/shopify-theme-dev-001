{% case media.media_type %}
    {% when 'image' %}
        <img src="{{ media | img_url: 'large' }}" alt="{{ media.alt | escape }}" class="w-full h-auto object-cover">
    {% when 'external_video' %}
        {{ media |  external_video_tag: class: 'w-full h-80 object-cover' }}

    {% when 'video' %}
        {{ media | video_tag: class: 'w-full h-80 object-cover', controls: true }}

    {% when 'model' %}

        {{ media |  model_viewer_tag }}
    
    {% else %}

    {{ media |  media_tag }}
        
{% endcase %}